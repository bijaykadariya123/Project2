<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("./partials/files.ejs") %>
    <style>
            .image-container {
                display: grid;
                grid-template-columns: repeat(5, 1fr);
                grid-gap: 10px;
            }

            .image-container img {
                width: 100%;
                height: 13rem;
            }
           
    </style>

</head>
<body>
    <%- include("./partials/header.ejs") %>
    <div class = "indexMain">
        <a href="/new"><button class="btn btn-outline-primary" id ="indexButton">Add New Country</button></a>

         <div class="image-container">
            <% allCountries.forEach((country, index)=>{%>
                <a href="/show/<%= country._id%>">  
                    <img class ="indexImg"src="<%= country.flagImageUrl %>" alt="Image">
                    <h3 style="text-align: center;"><%= country.countryName%></h3>
                </a> 
               <% })%>
        </div>

    </div>
    
</body>
</html>